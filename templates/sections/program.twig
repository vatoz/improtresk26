<!-- Program Page -->
<div class="container">
    <h1>Program festivalu</h1>

    {% if program_items is empty %}
        <div class="card">
            <div class="card__body">
                <p>Program festivalu bude brzy zve콏ejn캩n. Sledujte na코e str치nky pro aktualizace.</p>
            </div>
        </div>
    {% else %}
        <div class="program-grid">
            {% for date, timeSlots in program_items %}
                <div class="program-day">
                    <h2 class="program-day-title">{{ date|date('j. n. Y') }}</h2>

                    {% for timeSlot, slot in timeSlots %}
                        <div class="program-timeslot">
                            <div class="program-time-label">
                                {{ slot.start_time[:5] }} - {{ slot.end_time[:5] }}
                            </div>

                            {% if slot.full_width %}
                                {# Full-width item spanning both tracks #}
                                {% set item = slot.full_width %}
                                <div class="program-item program-item--full">
                                    <div class="program-content">
                                        <div class="program-header">
                                            <h3 class="program-title">{{ item.title }}</h3>
                                            <span class="program-type badge badge-{{ item.type }}">
                                                {% if item.type == 'performance' %}P콏edstaven칤
                                                {% elseif item.type == 'workshop' %}Workshop
                                                {% elseif item.type == 'discussion' %}Diskuse
                                                {% elseif item.type == 'party' %}P치rty
                                                {% else %}{{ item.type }}
                                                {% endif %}
                                            </span>
                                        </div>

                                        {% if item.performer %}
                                            <div class="program-performer">{{ item.performer }}</div>
                                        {% endif %}

                                        {% if item.description %}
                                            <p class="program-description">{{ item.description }}</p>
                                        {% endif %}

                                        <div class="program-details">
                                            {% if item.location %}
                                                <span class="program-location">游늸 {{ item.location }}</span>
                                            {% endif %}
                                            {% if item.is_free %}
                                                <span class="program-free">游꿞 Vstup zdarma</span>
                                            {% endif %}
                                            {% if item.max_capacity %}
                                                <span class="program-capacity">游논 Kapacita: {{ item.max_capacity }}</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                {# Concurrent tracks #}
                                <div class="program-tracks">
                                    {% for track in ['track_a', 'track_b'] %}
                                        <div class="program-track">
                                            <div class="program-track-label">
                                                {{ track == 'track_a' ? 'Blok A' : 'Blok B' }}
                                            </div>

                                            {% if slot[track] %}
                                                {% set item = slot[track] %}
                                                <div class="program-item">
                                                    <div class="program-content">
                                                        <div class="program-header">
                                                            <h3 class="program-title">{{ item.title }}</h3>
                                                            <span class="program-type badge badge-{{ item.type }}">
                                                                {% if item.type == 'performance' %}P콏edstaven칤
                                                                {% elseif item.type == 'workshop' %}Workshop
                                                                {% elseif item.type == 'discussion' %}Diskuse
                                                                {% elseif item.type == 'party' %}P치rty
                                                                {% else %}{{ item.type }}
                                                                {% endif %}
                                                            </span>
                                                        </div>

                                                        {% if item.performer %}
                                                            <div class="program-performer">{{ item.performer }}</div>
                                                        {% endif %}

                                                        {% if item.description %}
                                                            <p class="program-description">{{ item.description }}</p>
                                                        {% endif %}

                                                        <div class="program-details">
                                                            {% if item.location %}
                                                                <span class="program-location">游늸 {{ item.location }}</span>
                                                            {% endif %}
                                                            {% if item.is_free %}
                                                                <span class="program-free">游꿞 Vstup zdarma</span>
                                                            {% endif %}
                                                            {% if item.max_capacity %}
                                                                <span class="program-capacity">游논 Kapacita: {{ item.max_capacity }}</span>
                                                            {% endif %}
                                                        </div>
                                                    </div>
                                                </div>
                                            {% else %}
                                                <div class="program-item program-item--empty">
                                                    <div class="program-content">
                                                        <p class="program-empty-text">콯치dn칳 program</p>
                                                    </div>
                                                </div>
                                            {% endif %}
                                        </div>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
